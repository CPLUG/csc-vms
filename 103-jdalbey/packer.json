{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "bootstrap.sh",
        "virtualbox.sh"
      ],
      "execute_command": "echo 'student' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "applications/",
      "destination": "/usr/local/share/applications"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "Ubuntu",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04-server-i386.iso",
      "iso_checksum": "08d25bf879e353686a974b7b14ae7d81",
      "iso_checksum_type": "md5",
      "ssh_username": "student",
      "ssh_password": "student",
      "ssh_wait_timeout": "1200s",
      "shutdown_command": "echo 'student' | sudo -S shutdown -P now",
      "guest_additions_mode": "upload",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": ".",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz ",
        "auto ",
        "console-setup/ask_detect=false ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "hostname=student ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "-- <enter>"
      ]
    }
  ]
}
